<!-- declare version of HTML -->
<!DOCTYPE html>
<!-- specify language -->
<html lang="en">
  <!-- set up metadata and links to assets -->
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1.0"
    />
    <meta name="author" content="Danielle Andrews" />
    <meta name="description" content="todo list" />
    <meta
      name="keywords"
      content="todo, todos, task list, todo list"
    />

    <title>ToDo List</title>

    <script
      src="https://kit.fontawesome.com/940af2685d.js"
      crossorigin="anonymous"
    ></script>
    <link
      rel="icon"
      type="image/x-icon"
      href="../public/favicon.ico"
    />
    <link rel="stylesheet" href="css/normalize.css" />
    <link rel="stylesheet" href="css/style.css" />

    <!-- link to client-side JS here so it runs after the page loads -->
    <script defer src="js/main.js"></script>
  </head>
  <!-- everything that shows up in the DOM is inside the body -->
  <body>
    <header>
      <h1 class="title">Todo List</h1>
    </header>
    <main>
      <button id="darkModeToggle" class="dark-mode-toggle">ðŸŒ™</button>
      <div class="paperContainer">
        <div class="paperContent">
          <h2 class="todosLeft">
            <% if ( left < 1 ) { %>
            <span>All Done!</span>
            <% } else { %>
            <span><%= left %> Todos Left</span>
            <% } %>
          </h2>

          <ul class="todoItems">
            <!-- EJS here for dynamically creating HTML based on data from database -->
            <% for(let i=0; i < items.length; i++) {%>
            <li class="item">
              <% if(items[i].completed === true) {%>
              <span class="completed"><%= items[i].thing %></span>
              <% }else{ %>
              <span><%= items[i].thing %></span>
              <% } %>
              <span class="fa fa-trash"></span>
            </li>
            <% } %>
          </ul>
        </div>
      </div>

      <div class="addTodoContainer">
        <h2 class="addTodo">Add Todo:</h2>
        <!-- form sends a request to the server to add a todo item -->
        <form action="/addTodo" method="POST">
          <input
            type="text"
            placeholder="Thing To Do"
            name="todoItem"
          />
          <!-- <input type="submit" /> -->
          <button type="submit" id="addTaskBtn">Add Task</button>
        </form>
      </div>
    </main>
